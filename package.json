{
  "name": "caprover-one-click-apps",
  "version": "1.0.0",
  "description": "Custom One Click App Repository for CapRover",
  "scripts": {
    "format": "prettier --check \"./public/**/*.{json,yml}\"",
    "format:write": "prettier --write \"./public/**/*.{json,yml}\"",
    "build": "rm -rf ./dist/ && mkdir -p dist && node ./scripts/build.js",
    "validate": "node ./scripts/validate_apps.js",
    "publish": "pnpm run build && ./scripts/publish-from-actions.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Awes0meHub/caprover-one-click-apps.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Awes0meHub/caprover-one-click-apps/issues"
  },
  "homepage": "https://github.com/Awes0meHub/caprover-one-click-apps",
  "dependencies": {
    "fs-extra": "^11.2.0",
    "gh-pages": "^6.1.1",
    "prettier": "^3.2.1",
    "yaml": "^2.3.4"
  }
}
